/* pages/policy-detail/policy-detail.wxss */
page {
  background-color: #Eef2f6;
  height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
}

/* 滚动区 */
.detail-scroll {
  flex: 1;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
}

.content-card {
  background-color: #FFFFFF;
  border-radius: 60rpx;
  padding: 50rpx;
  box-shadow: 0 8rpx 60rpx rgba(0,0,0,0.04);
  margin-bottom: 30rpx;
}

.policy-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #111827;
  line-height: 1.4;
  margin-bottom: 32rpx;
}

.keywords-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.keyword-tag {
  font-size: 24rpx;
  font-weight: 500;
  color: #4F46E5;
  background-color: #EEF2FF;
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
}

.divider {
  height: 2rpx;
  background-color: #F3F4F6;
  margin-bottom: 40rpx;
}

.policy-content {
  font-size: 30rpx;
  color: #374151;
  line-height: 1.8;
  white-space: pre-wrap;
}

.bottom-spacer {
  height: 300rpx;
}

/* --- 悬浮 AI 政策助手卡片 --- */
.ai-float-card {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background-color: #111827;
  border-radius: 48rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  z-index: 100;
}

/* 展开状态 */
.ai-float-card.expanded {
  height: 60vh;
}

.ai-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
}

.ai-title-wrap {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.sparkle-icon {
  color: #60A5FA;
  font-size: 32rpx;
}

.ai-title-text {
  font-size: 26rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.ai-subtitle {
  font-size: 22rpx;
  color: #9CA3AF;
}

.collapse-icon {
  color: #9CA3AF;
  padding: 10rpx;
  font-size: 30rpx;
}

/* 聊天记录 */
.ai-chat-history {
  flex: 1;
  background-color: rgba(31, 41, 55, 0.5);
  border-radius: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.chat-item {
  display: flex;
  margin-bottom: 24rpx;
}
.chat-left { justify-content: flex-start; }
.chat-right { justify-content: flex-end; }

.chat-bubble {
  max-width: 85%;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  line-height: 1.5;
}

.bubble-user {
  background-color: #2563EB;
  color: #FFFFFF;
  border-bottom-right-radius: 4rpx;
}

.bubble-ai {
  background-color: #374151;
  color: #E5E7EB;
  border-bottom-left-radius: 4rpx;
}

/* 输入框 */
.ai-input-box {
  background-color: #1F2937;
  border-radius: 32rpx;
  padding: 10rpx;
  border: 1px solid #374151;
  display: flex;
  align-items: center;
}

.ai-input {
  flex: 1;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}

.ai-placeholder {
  color: #9CA3AF;
}

.ai-send-btn {
  width: 70rpx;
  height: 70rpx;
  background-color: #2563EB;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-up {
  color: #FFFFFF;
  font-weight: bold;
  font-size: 32rpx;
}

/* 加载状态 */
.loading-state,
.error-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.loading-icon,
.error-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.loading-text,
.error-text {
  font-size: 28rpx;
  color: #999;
}

.retry-btn {
  margin-top: 40rpx;
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #3B9FFF 0%, #2E7FE5 100%);
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
  border: none;
}

.retry-btn::after {
  border: none;
}

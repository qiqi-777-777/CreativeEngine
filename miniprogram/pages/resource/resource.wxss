/* pages/resource/resource.wxss */

.container {
  min-height: 100vh;
  /* Liquid Gradient: from-rose-100 via-indigo-100 to-teal-100 */
  background: linear-gradient(135deg, #FFE4E6 0%, #E0E7FF 50%, #CCFBF1 100%);
  padding: 40rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', sans-serif;
  color: #1E293B; /* slate-800 */
}

/* 顶部 Header */
.page-header {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 60rpx; /* Top padding */
}

.header-left {
  display: flex;
  flex-direction: column;
}

.header-subtitle {
  font-size: 20rpx;
  color: #64748B; /* slate-500 */
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 4rpx;
  margin-bottom: 8rpx;
}

.header-title {
  font-size: 60rpx;
  font-weight: 900; /* Balck/Heavy */
  color: #1E293B; /* slate-800 */
  line-height: 1.1;
}

.search-btn {
  width: 96rpx;
  height: 96rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.search-icon-img {
  font-size: 40rpx;
}

/* 搜索框 (if kept inline, adjust style) */
.search-bar {
  display: none; /* Hiding default search bar in favor of header button style if strictly following design, or keep it */
}

/* 分类标签 (Inline styled tabs) */
.category-tabs {
  margin-bottom: 40rpx;
}

.tabs-scroll {
  white-space: nowrap;
  width: 100%;
}

.tab-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  font-size: 24rpx;
  font-weight: 700;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.5);
  color: #64748B;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  transition: all 0.3s;
}

.tab-item.active {
  background: #1E293B; /* Black/Dark Slate */
  color: #fff;
  border-color: #1E293B;
}

/* 列表容器 */
.page-body {
  padding: 0;
  padding-bottom: 200rpx; /* Space for bottom bar */
}

/* Glassmorphism Card */
.job-item {
  position: relative;
  margin-bottom: 40rpx;
  padding: 40rpx;
  border-radius: 60rpx; /* rounded-[40px] approx 80rpx in design? 40px=80rpx usually. let's use 60rpx */
  
  /* bg-white/40 */
  background: rgba(255, 255, 255, 0.4);
  /* backdrop-blur-2xl */
  backdrop-filter: blur(40px);
  /* border border-white/60 */
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  /* shadow-xl */
  box-shadow: 0 40rpx 60rpx -20rpx rgba(0, 0, 0, 0.1);
  
  transition: transform 0.2s;
}

.job-item:active {
  transform: scale(0.98);
}

.job-top-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.job-category-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.5);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 999rpx;
  font-size: 20rpx;
  font-weight: 800;
  text-transform: uppercase;
  color: #64748B;
}

.job-salary-box {
  text-align: right;
}

.job-salary {
  font-size: 36rpx;
  font-weight: 900;
  color: #1E293B;
}

.job-unit {
  font-size: 20rpx;
  font-weight: 700;
  color: #64748B;
  margin-left: 4rpx;
}

.job-title {
  font-size: 36rpx;
  font-weight: 900;
  color: #1E293B;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.job-desc {
  font-size: 24rpx;
  color: #64748B;
  line-height: 1.6;
  margin-bottom: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.job-footer {
  padding-top: 30rpx;
  border-top: 2rpx dashed rgba(148, 163, 184, 0.4); /* border-dashed border-neutral-300 */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.job-info-row {
  display: flex;
  gap: 24rpx;
}

.job-info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #64748B;
}

.info-icon {
  font-size: 24rpx;
}

.arrow-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #F1F5F9; /* slate-100 */
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1E293B;
  font-size: 32rpx;
  font-weight: bold;
}

/* 底部导航 (Homepage Style) */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -1px 4px rgba(0, 0, 0, 0.05);
  z-index: 9999;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.05);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 20rpx;
  font-weight: 500;
  color: #999999;
}

/* AI助手特殊处理 */
.special-item {
  position: relative;
  top: 0;
}

.special-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
}

.special-icon {
  width: 100%;
  height: 100%;
}

.special-text {
  position: relative;
  top: 0;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #64748B;
  font-size: 28rpx;
}



/* pages/career-match/career-match.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #F8F9FA; /* Light gray background for contrast with white cards */
  position: relative;
  overflow: hidden;
}

/* 顶部标题区 */
.page-header {
  padding: 40rpx 40rpx 20rpx;
  background: #fff;
  z-index: 10;
}

.page-subtitle {
  font-size: 20rpx;
  color: #9CA3AF;
  font-weight: 600;
  letter-spacing: 2rpx;
  text-transform: uppercase;
  margin-bottom: 8rpx;
  display: block;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #111827;
}

.header-icons {
  display: flex;
  gap: 20rpx;
}

.icon-circle {
  width: 72rpx;
  height: 72rpx;
  border-radius: 999rpx;
  background: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-icon, .more-icon {
  font-size: 32rpx;
  color: #374151;
}

/* 主滚动区 */
.main-scroll {
  flex: 1;
  height: 100%;
}

.cards-container {
  padding: 20rpx 30rpx 160rpx; /* Bottom padding for footer */
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 维度卡片 */
.dimension-card {
  background: #fff;
  border-radius: 40rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.icon-bg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bg-blue { background: #3B82F6; }
.bg-purple { background: #8B5CF6; }
.bg-orange { background: #F97316; }

.card-icon-img {
  width: 44rpx; /* Slightly larger for SVG */
  height: 44rpx;
  display: block;
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

/* Modal Trigger Link */
.modal-trigger {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 0;
}

.modal-trigger text {
  font-size: 26rpx;
  color: #9CA3AF;
  font-weight: 500;
}

.modal-trigger .arrow-small {
  font-size: 32rpx;
  line-height: 1;
  color: #D1D5DB;
}

.modal-trigger:active text {
  color: #3B82F6;
}

/* 横向滚动选项 */
.options-scroll {
  width: 100%;
  white-space: nowrap;
}

.options-row {
  display: flex;
  flex-direction: column; /* Use column to stack the two rows */
  gap: 16rpx;
  padding-bottom: 10rpx; /* Scrollbar padding if needed */
}

.option-column {
  display: flex;
  gap: 16rpx;
}

.option-chip {
  display: inline-flex;
  padding: 16rpx 36rpx;
  background: #fff;
  border: 1rpx solid #E5E7EB;
  border-radius: 999rpx;
  font-size: 26rpx;
  color: #4B5563;
  font-weight: 500;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.02);
  transition: all 0.2s;
}

.option-chip:active {
  transform: scale(0.95);
  background: #F9FAFB;
}

/* 选中状态 */
.selected-blue {
  background: #EFF6FF;
  border-color: #3B82F6;
  color: #3B82F6;
  font-weight: 600;
}

.selected-purple {
  background: #F5F3FF;
  border-color: #8B5CF6;
  color: #8B5CF6;
  font-weight: 600;
}

.selected-orange {
  background: #FFF7ED;
  border-color: #F97316;
  color: #F97316;
  font-weight: 600;
}


/* 底部操作栏 */
.bottom-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  background: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  z-index: 100;
}

.selected-info {
  display: flex;
  flex-direction: column;
}

.info-label {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-bottom: 4rpx;
}

.info-text {
  font-size: 26rpx;
  color: #D1D5DB;
  font-weight: 500;
}

.info-count {
  font-size: 32rpx;
  color: #111827;
  font-weight: 700;
}

.action-btn-wrapper {
  
}

.match-btn {
  background: #F3F4F6;
  padding: 24rpx 48rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #111827;
  font-weight: 700;
  font-size: 30rpx;
  transition: all 0.3s;
}

.match-btn.disabled {
  opacity: 0.6;
}

.match-btn:not(.disabled) {
  background: #111827;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(17, 24, 39, 0.3);
}

.arrow {
  font-size: 32rpx;
  font-weight: 400;
}

.footer-spacer {
  height: 80rpx;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.55);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.personality-modal {
  width: 86%;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid #F3F4F6;
  background: #F97316;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
}

.close-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.personality-content {
  max-height: 60vh;
  padding: 24rpx 28rpx 32rpx;
  box-sizing: border-box;
}

.personality-detail-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F3F4F6;
}

.personality-detail-item:last-child {
  border-bottom: none;
}

.personality-type {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8rpx;
}

.personality-desc {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 6rpx;
  line-height: 1.6;
}

.personality-traits {
  font-size: 26rpx;
  color: #4B5563;
  line-height: 1.6;
}

.trait-label {
  color: #111827;
  font-weight: 600;
}



/**app.wxss**/
page {
  /* 主题色 - 浅蓝色系 */
  --primary-color: #3B9FFF;
  --primary-light: #E6F4FF;
  --primary-gradient: linear-gradient(135deg, #6CC6FF 0%, #3B9FFF 100%);
  
  /* 辅助色 */
  --text-main: #1F2937; /* Gray-800 */
  --text-secondary: #4B5563; /* Gray-600 */
  --text-muted: #9CA3AF; /* Gray-400 */
  --bg-body: #F0F9FF; /* Light Blue 50 */
  --bg-card: #FFFFFF;
  
  /* 边框与阴影 */
  --border-color: #E5E7EB;
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(59, 159, 255, 0.1), 0 2px 4px -1px rgba(59, 159, 255, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(59, 159, 255, 0.1), 0 4px 6px -2px rgba(59, 159, 255, 0.05);

  background-color: var(--bg-body);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: var(--text-main);
  box-sizing: border-box;
}

/* 全局容器 */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片样式 - 高保真圆角阴影 */
.card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.995);
}

/* 阴影提升类 */
.shadow-md { box-shadow: var(--shadow-md); }
.shadow-lg { box-shadow: var(--shadow-lg); }

/* 按钮样式 - 渐变 */
.btn-primary {
  background: var(--primary-gradient);
  color: #fff;
  border-radius: 999rpx; /* Pill shape */
  padding: 24rpx 48rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4px 12px rgba(59, 159, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.2s;
}

.btn-primary:active {
  opacity: 0.9;
  box-shadow: 0 2px 6px rgba(59, 159, 255, 0.3);
}

.btn-outline {
  background: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 999rpx;
  padding: 22rpx 48rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* 文本实用类 */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 40rpx; }
.font-bold { font-weight: 700; }
.font-semibold { font-weight: 600; }
.font-medium { font-weight: 500; }

.text-primary { color: var(--primary-color); }
.text-main { color: var(--text-main); }
.text-secondary { color: var(--text-secondary); }
.text-muted { color: var(--text-muted); }

/* Flex 布局实用类 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-row { flex-direction: row; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-around { justify-content: space-around; }
.justify-end { justify-content: flex-end; }
.flex-1 { flex: 1; }
.flex-wrap { flex-wrap: wrap; }
.gap-1 { gap: 8rpx; }
.gap-2 { gap: 16rpx; }
.gap-3 { gap: 24rpx; }
.gap-4 { gap: 32rpx; }

/* 间距实用类 (Space) */
.m-0 { margin: 0; }
.mt-2 { margin-top: 16rpx; }
.mt-4 { margin-top: 32rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-4 { margin-bottom: 32rpx; }
.mx-2 { margin-left: 16rpx; margin-right: 16rpx; }
.mx-4 { margin-left: 32rpx; margin-right: 32rpx; }
.my-2 { margin-top: 16rpx; margin-bottom: 16rpx; }
.my-4 { margin-top: 32rpx; margin-bottom: 32rpx; }

.p-2 { padding: 16rpx; }
.p-4 { padding: 32rpx; }
.px-4 { padding-left: 32rpx; padding-right: 32rpx; }
.py-2 { padding-top: 16rpx; padding-bottom: 16rpx; }
.py-4 { padding-top: 32rpx; padding-bottom: 32rpx; }

/* 其他实用类 */
.w-full { width: 100%; }
.h-full { height: 100%; }
.rounded-full { border-radius: 9999rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 24rpx; }
.opacity-90 { opacity: 0.9; }

/* 标签样式更新 */
.tag {
  display: inline-flex;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  font-weight: 500;
}

.tag-primary {
  background: var(--primary-light);
  color: var(--primary-color);
}


